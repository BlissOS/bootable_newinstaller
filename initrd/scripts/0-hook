hook_gearinit(){ export RECOVERY="yes" PATH="$PATH:/gearlock/bin"; mount -o rw,remount /;mount -o rw,remount /android; test -e "/mnt/$SRC/system.sfs" && export PREFIX=/ || export PREFIX=/android/; GIMG="/mnt/$SRC/gearlock"; test -e "$GIMG" && test ! -e /gearlock && mkdir /gearlock && chmod 755 /gearlock && ( cd $PREFIX; cpio -iudF "$GIMG" ) > /dev/null 2>&1 && ${PREFIX}gearlock/bin/base ${PREFIX}gearlock/bin/remountfs && gearinit; }